{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "playwright"],
    "allowJs": true,
    "baseUrl": "./src",                                  /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      "utils/*": ["config-fixtures/*"],
      "pages/*": ["page-objects/*"],
      "data-test/*": ["dataTest/*"],
      "actions/*": ["utils/*"],
      "models/*": ["models/*"],
    }       
  },
  "include": ["tests", "playwright.config.ts", "src"]
}
